<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.nish.android.cleanarch.activity.ui.newhotel.CommentViewModel" />

        <variable
            name="sharedViewmodel"
            type="com.nish.android.cleanarch.viewmodel.HotelViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewmodel.commentName}"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewmodel.commentDesc}"
            app:layout_constraintTop_toBottomOf="@id/name"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="@{() -> sharedViewmodel.addComment(viewmodel.commentName, viewmodel.commentDesc)}"
            app:layout_constraintTop_toBottomOf="@id/comment"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>